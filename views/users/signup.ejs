<% layout("/layouts/boilerplate", { hideNavbar: true, hideDarkToggle: true }) %>

<style>
body {
  background: #181c2b;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.signup-main {
  width: 100vw;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.signup-title {
  color: #bbaaff;
  font-size: 2.4rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  letter-spacing: 1px;
  text-align: center;
}
.signup-subtitle {
  color: #e0e0e0;
  font-size: 1.1rem;
  margin-bottom: 2rem;
  text-align: center;
}
.signup-card {
  background: #202436;
  border-radius: 20px;
  box-shadow: 0 4px 32px rgba(162,89,247,0.13);
  border: 1.5px solid #31354a;
  padding: 2.2rem 2.5rem 2rem 2.5rem;
  max-width: 420px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.signup-card h2 {
  color: #fff;
  font-size: 1.35rem;
  font-weight: 600;
  margin-bottom: 0.2rem;
  text-align: center;
}
.signup-card .desc {
  color: #b0b3b8;
  font-size: 0.98rem;
  text-align: center;
  margin-bottom: 1.5rem;
}
.form-label {
  color: #e0e0e0;
  font-weight: 500;
  margin-bottom: 0.2rem;
}
.form-control {
  background: #23263a;
  border: 1.5px solid #2d3148;
  color: #fff;
  border-radius: 8px;
  font-size: 1rem;
  margin-bottom: 0.7rem;
  padding: 0.7rem 1rem;
  transition: border 0.2s;
}
.form-control:focus {
  border: 1.5px solid #a259f7;
  background: #23263a;
  color: #fff;
  box-shadow: none;
}
.signup-btn {
  width: 100%;
  background: linear-gradient(90deg, #a259f7 60%, #7c3aed 100%);
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 1.08rem;
  font-weight: 600;
  padding: 0.7rem 0;
  margin-top: 0.7rem;
  margin-bottom: 1.2rem;
  transition: background 0.2s;
}
.signup-btn:hover {
  background: linear-gradient(90deg, #7c3aed 60%, #a259f7 100%);
}
.signup-link {
  color: #a259f7;
  text-decoration: none;
  font-weight: 500;
  margin-left: 0.2rem;
  transition: color 0.2s;
}
.signup-link:hover {
  color: #7c3aed;
}
.input-group-custom {
  display: flex;
  align-items: center;
  background: #23273a;
  border: 1.5px solid #3a3f54;
  border-radius: 8px;
  margin-bottom: 0.7rem;
  padding: 0 0.8rem;
  transition: border 0.2s, background 0.2s;
  height: 46px;
}
.input-group-custom:focus-within {
  border: 1.5px solid #a259f7;
  background: #23273a;
}
.input-group-custom i {
  color: #b0b3b8;
  font-size: 1.15rem;
  margin-right: 0.7rem;
  display: flex;
  align-items: center;
  height: 100%;
}
.input-group-custom .form-control {
  background: transparent;
  border: none;
  color: #e0e0e0;
  font-size: 1rem;
  padding: 0;
  box-shadow: none;
  outline: none;
  width: 100%;
  height: 100%;
  line-height: 1.2;
  display: block;
}
.input-group-custom .form-control:focus {
  border: none;
  outline: none;
  box-shadow: none;
}
.input-group-custom .form-control::placeholder {
  color: #b0b3b8;
  opacity: 1;
  font-weight: 500;
  letter-spacing: 0.1px;
  line-height: 1.2;
}
</style>

<div class="signup-main">
  <div class="signup-title">DreamyStays</div>
  <div class="signup-subtitle">Create your account to get started</div>
  <div class="signup-card">
    <h2>Sign Up</h2>
    <div class="desc">Enter your email and password to sign up</div>
    <form action="/signup" method="POST" autocomplete="off">
      <div class="mb-2">
        <label for="email" class="form-label">Email</label>
        <div class="input-group-custom">
          <i class="fa-regular fa-envelope"></i>
          <input name="email" id="email" type="email" class="form-control" placeholder="Enter your email" required>
        </div>
      </div>
      <div class="mb-2">
        <label for="password" class="form-label">Password</label>
        <div class="input-group-custom">
          <i class="fa-solid fa-lock"></i>
          <input name="password" id="password" type="password" class="form-control" placeholder="Enter your password" required>
        </div>
      </div>
      <button class="signup-btn" type="submit">Sign Up</button>
    </form>
    <div style="text-align:center; color:#b0b3b8; font-size:0.98rem;">
      Already have an account?
      <a href="/login" class="signup-link">Sign in</a>
    </div>
  </div>
</div>