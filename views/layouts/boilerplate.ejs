<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LuxStay</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <style>
      body.lux-dark {
        background-color: #181c2b !important;
        color: #f8f9fa !important;
      }
      .lux-gold {
        color: #d4af37 !important;
      }
      .lux-bg-gold {
        background-color: #d4af37 !important;
      }
      .lux-bg-navy {
        background-color: #181c2b !important;
      }
      .lux-border-gold {
        border-color: #d4af37 !important;
      }
    </style>
</head>
<body class="lux-bg-navy text-light">
    <% if (!hideNavbar) { %>
        <%- include("../includes/navbar.ejs") %>
    <% } %>
    <% if (hideNavbar) { %>
        <%- include("../includes/flash.ejs") %>
        <%- body %>
    <% } else { %>
        <div class="container py-4">
            <%- include("../includes/flash.ejs") %>
            <%- body %>
        </div>
    <% } %>
    <%- include("../includes/footer.ejs") %>
    <% if (!hideDarkToggle) { %>
    <button id="darkModeToggle" class="btn btn-outline-light position-fixed bottom-0 end-0 m-4" style="z-index:9999;">
      <i class="fa-solid fa-moon"></i> Toggle Dark Mode
    </button>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    <script>
      const toggleBtn = document.getElementById('darkModeToggle');
      toggleBtn.addEventListener('click', () => {
        document.body.classList.toggle('lux-dark');
      });
    </script>
</body>
</html>