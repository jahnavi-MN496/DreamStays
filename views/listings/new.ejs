<% layout("/layouts/boilerplate") %>
<style>
.listing-form-main {
  max-width: 600px;
  margin: 2.5rem auto 2rem auto;
  background: #202436;
  border-radius: 1.5rem;
  box-shadow: 0 4px 32px rgba(162,89,247,0.10);
  border: 1.5px solid #31354a;
  padding: 2.5rem 2.5rem 2rem 2.5rem;
  color: #f8f9fa;
}
.listing-form-main h3 {
  color: #a259f7;
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-align: center;
}
.listing-form-main label {
  color: #bbaaff;
  font-weight: 600;
  margin-bottom: 0.3rem;
}
.listing-form-main .form-control {
  background: #23284a;
  border: 1.5px solid #a259f7;
  color: #fff;
  border-radius: 0.8rem;
  font-size: 1.08rem;
  padding: 0.7rem 1rem;
  margin-bottom: 0.7rem;
  transition: border 0.2s;
}
.listing-form-main .form-control:focus {
  border: 1.5px solid #bbaaff;
  background: #23284a;
  color: #fff;
  box-shadow: 0 0 0 0.2rem rgba(162,89,247,0.10);
}
.listing-form-main .btn-add {
  width: 100%;
  background: linear-gradient(90deg, #a259f7 60%, #7c3aed 100%);
  color: #fff;
  border: none;
  border-radius: 0.8rem;
  font-size: 1.08rem;
  font-weight: 600;
  padding: 0.7rem 0;
  margin-top: 1.2rem;
  transition: background 0.2s;
}
.listing-form-main .btn-add:hover {
  background: linear-gradient(90deg, #7c3aed 60%, #a259f7 100%);
}
@media (max-width: 700px) {
  .listing-form-main {
    padding: 1.2rem 0.7rem 1rem 0.7rem;
  }
}
.listing-form-main ::placeholder {
  color: #bbaaff;
  opacity: 1;
  font-weight: 500;
  letter-spacing: 0.1px;
}
.listing-form-main input[type="file"]::-webkit-file-upload-button {
  background: linear-gradient(90deg, #a259f7 60%, #7c3aed 100%);
  color: #fff;
  border: none;
  border-radius: 0.8rem;
  font-size: 1.02rem;
  font-weight: 600;
  padding: 0.5rem 1.2rem;
  margin-right: 1rem;
  transition: background 0.2s;
  box-shadow: 0 2px 8px rgba(162,89,247,0.08);
}
.listing-form-main input[type="file"]::-webkit-file-upload-button:hover {
  background: linear-gradient(90deg, #7c3aed 60%, #a259f7 100%);
}
.listing-form-main input[type="file"] {
  color: #bbaaff;
  background: #23284a;
  border: 1.5px solid #a259f7;
  border-radius: 0.8rem;
  padding: 0.4rem 0.5rem;
  font-size: 1.02rem;
}
.listing-form-main .custom-file-upload {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 0.7rem;
}
.listing-form-main .custom-file-label {
  background: linear-gradient(90deg, #a259f7 60%, #7c3aed 100%);
  color: #fff;
  border: none;
  border-radius: 0.8rem;
  font-size: 1.02rem;
  font-weight: 600;
  padding: 0.5rem 1.2rem;
  cursor: pointer;
  transition: background 0.2s;
  box-shadow: 0 2px 8px rgba(162,89,247,0.08);
  display: inline-block;
}
.listing-form-main .custom-file-label:hover {
  background: linear-gradient(90deg, #7c3aed 60%, #a259f7 100%);
}
.listing-form-main .custom-file-input {
  display: none;
}
.listing-form-main .file-name {
  color: #bbaaff;
  font-size: 1.02rem;
  font-weight: 500;
  word-break: break-all;
}
</style>
<div class="listing-form-main">
  <h3>Create a new listing</h3>
  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" required>
      <div class="invalid-feedback">Title should be valid</div>
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" placeholder="Describe your place..." required></textarea>
      <div class="invalid-feedback">Description should be valid</div>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">Upload Listing Image</label>
      <div class="custom-file-upload">
        <label class="custom-file-label" for="listing-image-input">Choose File</label>
        <input id="listing-image-input" name="listing[image]" class="custom-file-input" type="file" required>
        <span class="file-name" id="file-name">No file chosen</span>
      </div>
    </div>
    <script>
    const fileInput = document.getElementById('listing-image-input');
    const fileName = document.getElementById('file-name');
    fileInput.addEventListener('change', function() {
      fileName.textContent = this.files[0] ? this.files[0].name : 'No file chosen';
    });
    </script>
    <div class="row">
      <div class="mb-3 col-md-6">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" class="form-control" placeholder="Enter price" required>
        <div class="invalid-feedback">Price should be valid</div>
      </div>
      <div class="mb-3 col-md-6">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="Enter country" class="form-control" required>
        <div class="invalid-feedback">Country should be valid</div>
      </div>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" class="form-control" placeholder="Enter location" type="text" required>
      <div class="invalid-feedback">Location should be valid</div>
    </div>
    <button class="btn btn-add">Add Listing</button>
  </form>
</div>
