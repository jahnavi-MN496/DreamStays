<% layout("/layouts/boilerplate") %>

<style>
:root {
  --main-bg: #181c2b;
  --card-bg: #23263a;
  --accent: #a259f7;
  --accent-hover: #7c3aed;
  --border: #23263a;
  --muted: #b0b3b8;
  --soft: #23263a;
  --radius: 14px;
  --shadow: 0 4px 24px rgba(162,89,247,0.10);
}
body {
  background: var(--main-bg);
  font-family: 'Segoe UI', Arial, sans-serif;
  color: #f5f6fa;
}
#filters {
  display: flex;
  overflow-x: auto;
  padding: 1.1rem 2rem 1rem 2rem;
  gap: 1rem;
  background: var(--soft);
  border-bottom: 1px solid var(--border);
  align-items: center;
  border-radius: 0 0 var(--radius) var(--radius);
  box-shadow: 0 2px 8px rgba(162,89,247,0.03);
}
#filters::-webkit-scrollbar { display: none; }
.filter {
  background: var(--card-bg);
  color: var(--accent);
  border: 1.5px solid var(--border);
  border-radius: 999px;
  padding: 0.5rem 1rem;
  font-family: inherit;
  font-weight: 600;
  font-size: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: background 0.18s, color 0.18s, border 0.18s, transform 0.18s, box-shadow 0.18s;
  cursor: pointer;
}
.filter:hover {
  background: var(--accent);
  color: #181c2b;
  border: 1.5px solid var(--accent);
  transform: translateY(-2px) scale(1.05);
  box-shadow: 0 2px 12px var(--accent);
}
.filter i {
  font-size: 1.1rem;
  margin-bottom: 0.1rem;
}
.filter p {
  font-size: 0.8rem;
  margin: 0;
  letter-spacing: 0.5px;
}
.tax-toggle {
  margin-left: auto;
  display: flex;
  align-items: center;
  padding: 0.4rem 0.9rem;
  border: 1.5px solid var(--border);
  border-radius: 999px;
  background: var(--card-bg);
  color: var(--accent);
  font-weight: 600;
  font-size: 1rem;
}
.tax-info {
  display: none;
  color: var(--accent);
  font-size: 0.95em;
  font-weight: 600;
}

.listing-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
  padding: 2.2rem 2rem 2rem 2rem;
  background: var(--main-bg);
}
.listing-link {
  text-decoration: none;
}
.listing-card {
  background: #23263a;
  border-radius: 16px;
  box-shadow: 0 4px 24px rgba(162,89,247,0.10);
  border: 1.5px solid #23263a;
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  min-width: 340px;
  max-width: 370px;
  margin: 0 auto;
  transition: box-shadow 0.18s, border 0.18s, transform 0.18s;
}
.listing-card:hover {
  box-shadow: 0 8px 32px #a259f7;
  border: 2px solid #a259f7;
  transform: translateY(-6px) scale(1.03);
  z-index: 2;
}
.card-img-wrap {
  position: relative;
}
.card-img-top {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
}
.featured-badge {
  position: absolute;
  top: 14px;
  left: 14px;
  background: #a259f7;
  color: #fff;
  font-size: 0.92rem;
  font-weight: 600;
  border-radius: 8px;
  padding: 0.22rem 0.85rem;
  z-index: 3;
  box-shadow: 0 2px 8px rgba(162,89,247,0.10);
}
.card-body {
  padding: 1.1rem 1.2rem 1.2rem 1.2rem;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.card-title {
  font-size: 1.35rem;
  color: #fff;
  font-weight: 700;
  margin-bottom: 0.3rem;
  letter-spacing: 0.2px;
}
.card-location {
  color: #b0b3b8;
  font-size: 1.05rem;
  margin-bottom: 0.7rem;
  display: flex;
  align-items: center;
  gap: 0.4rem;
}
.card-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0.7rem;
}
.card-rating {
  color: #ffd700;
  font-size: 1.08rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}
.card-rating .fa-star {
  color: #ffd700;
  margin-right: 0.18rem;
}
.card-reviews {
  color: #b0b3b8;
  font-size: 1.01rem;
  margin-left: 0.18rem;
}
.card-price {
  color: #fff;
  font-weight: 700;
  font-size: 1.35rem;
  letter-spacing: 0.5px;
}
.card-price span {
  color: #b0b3b8;
  font-size: 1.05rem;
  font-weight: 400;
  margin-left: 0.1rem;
}
.card-tags {
  display: flex;
  gap: 0.6rem;
  margin-top: 0.7rem;
}
.card-tag {
  background: #23263a;
  color: #b0b3b8;
  border: 1.2px solid #2d3148;
  border-radius: 999px;
  padding: 0.22rem 0.95rem;
  font-size: 0.97rem;
  font-weight: 500;
  letter-spacing: 0.2px;
  display: inline-block;
}
@media (max-width: 600px) {
  .listing-grid {
    padding: 1.1rem 0.5rem;
    gap: 1rem;
  }
  #filters {
    padding: 0.7rem 0.5rem;
    gap: 0.5rem;
  }
  .listing-card {
    min-height: 220px;
  }
}
</style>

<div id="filters">
  <% const categories = [
    { icon: "fa-fire", label: "Trending" },
    { icon: "fa-bed", label: "Rooms" },
    { icon: "fa-mountain-city", label: "Cities" },
    { icon: "fa-mountain", label: "Mountains" },
    { icon: "fa-fort-awesome", label: "Castles" },
    { icon: "fa-person-swimming", label: "Pools" },
    { icon: "fa-campground", label: "Camping" },
    { icon: "fa-cow", label: "Farms" },
    { icon: "fa-snowflake", label: "Arctic" },
    { icon: "fa-igloo", label: "Domes" },
    { icon: "fa-ship", label: "Boats" }
  ]; %>
  <% for (let cat of categories) { %>
    <div class="filter">
      <i class="fa-solid <%= cat.icon %>"></i>
      <p><%= cat.label %></p>
    </div>
  <% } %>
  <div class="tax-toggle">
    <input class="form-check-input me-2" type="checkbox" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Price with tax</label>
  </div>
</div>

<div class="listing-grid">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="listing-card">
        <div class="card-img-wrap">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
          <div class="featured-badge">Featured</div>
        </div>
        <div class="card-body">
          <div class="card-title"><%= listing.title %></div>
          <div class="card-location"><i class="fa-solid fa-location-dot"></i> <%= listing.location %>, <%= listing.country %></div>
          <div class="card-row">
            <div class="card-rating">
              <i class="fa-solid fa-star"></i> 4.8 <span class="card-reviews">(89)</span>
            </div>
            <div class="card-price">$<%= listing.price %><span>/night</span></div>
          </div>
          <div class="card-tags">
            <span class="card-tag">Fireplace</span>
            <span class="card-tag">Hot Tub</span>
            <span class="card-tag">Ski Access</span>
          </div>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("change", () => {
    document.querySelectorAll(".tax-info").forEach((info) => {
      info.style.display = taxSwitch.checked ? "inline" : "none";
    });
  });
</script>
